@using PatientInformationPortaUI.Enums
@model PatientInformationPortaUI.Models.PatientViewModel

@{
    ViewData["Title"] = "_AddPatientPartialView";
}
<div class="modal fade" role="dialog" tabindex="-1" id="addPatient" aria-labelledby="addPatientLable" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Patient Information</h3>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PatientName" class="control-label">Patient Name</label>
                        <input asp-for="PatientName" class="form-control" />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiseaseID" class="control-label">DiseaseID</label>
                        <select asp-for="DiseaseID" class="form-control" />
                        <span asp-validation-for="DiseaseID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Epilepsy" class="control-label">Epilepsy</label>
                        <select asp-for="Epilepsy" class="form-control"  asp-items="Html.GetEnumSelectList<Epilepsy>()"/>
                        <span asp-validation-for="Epilepsy" class="text-danger"></span>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>